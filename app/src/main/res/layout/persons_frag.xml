<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">


    <TextView
        android:id="@+id/label_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="10dp"
        android:text="@string/sex_female"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/switch_sex"
        app:layout_constraintBaseline_toBaselineOf="@id/switch_sex" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accept_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept_button"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear_button"
        app:layout_constraintStart_toEndOf="@id/accept_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_button"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enter name"
        android:layout_marginVertical="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_surname"
        app:layout_constraintTop_toBottomOf="@+id/input_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enter surname"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_second_name"
        app:layout_constraintTop_toBottomOf="@+id/input_surname"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enter second name"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_birth"
        app:layout_constraintTop_toBottomOf="@+id/input_second_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enter date birth"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:inputType="date"
        android:layout_height="wrap_content"/>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_birth"
        android:text="@string/sex_male" />

    <ListView
        android:id="@+id/person_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@id/switch_sex" />


</androidx.constraintlayout.widget.ConstraintLayout>